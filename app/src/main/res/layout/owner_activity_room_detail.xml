<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mansa.StaySpace.Owner.roomDetailActivity">

    <include
        layout="@layout/actionbarlayout"
     />


    <android.support.v7.widget.CardView
        android:id="@+id/c1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:id="@+id/lll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Room No:"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/roomno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="22sp"
                        android:text="1"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Rent Amount"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/roomrent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="500"
                        android:textColor="#000"
                        android:textSize="22sp"

                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Due Amount"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/dueAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="N/A"
                        android:textColor="#000"
                        android:textSize="22sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_action_bed"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:id="@+id/roomtype"
                        android:text="x3"
                        android:textSize="18sp"/>
                </LinearLayout>
                <android.support.v4.widget.Space
                    android:layout_width="60dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_action_person"/>
                        <TextView
                            android:id="@+id/totalRoomCapacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="NA"
                            android:textColor="#707070"
                            android:textSize="15sp"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Total)"
                        android:gravity="center"/>
                </LinearLayout>

                <android.support.v4.widget.Space
                    android:layout_width="30dp"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:orientation="horizontal"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_action_add_person"/>
                        <TextView
                            android:id="@+id/roomCapacity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="NA"
                            android:textColor="#707070"
                            android:textSize="15sp"
                            />

                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(Available)"
                        android:gravity="center"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp"
                android:weightSum="3"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:id="@+id/checkInDateTitleTv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:text="CheckIn Date"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/checkInDateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:text="N/A"
                        />
                </LinearLayout>
                <Button
                    android:padding="5dp"
                    android:id="@+id/empt_checkin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="checkOut"
                    android:layout_gravity="center"
                    android:text="Vacate"
                    android:layout_weight="1"
                    android:textAllCaps="false" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:padding="5dp">

                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Due Date"
                        android:textSize="15sp"
                        />

                    <TextView
                        android:id="@+id/dueDateText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:text="N/A"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scv"
        android:layout_below="@+id/c1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="#fff"
        android:id="@+id/c2"
        android:layout_marginTop="15dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lay2"
                   >

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="expandStudents"
                        android:text="Tenants"
                        android:id="@+id/studentsExpandingView"
                        android:elevation="2dp"
                        android:textColor="#424242"
                        android:textSize="18sp"
                        android:drawableRight="@drawable/ic_up_arrow" />
                </LinearLayout>
                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/lay2"
                    app:ael_duration="400"
                    android:background="#fff"
                    app:ael_expanded="true"
                    android:id="@+id/studentsLayout"
                    app:ael_interpolator="accelerate"
                    app:ael_orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" >
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:background="#fff"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/studentsLayout"
                        android:id="@+id/studentsRecyclerView">

                    </android.support.v7.widget.RecyclerView>
                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            </RelativeLayout>

        </ScrollView>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_below="@+id/c2"
        app:cardBackgroundColor="#fff"
        android:layout_marginTop="2dp"
        app:cardElevation="2dp"
        android:layout_height="wrap_content"
        >
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

         <RelativeLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lay3"

                    >

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:onClick="expandPayments"
                        android:text="Payment History"
                        android:id="@+id/paymentsExpandLayout"
                        android:elevation="2dp"
                        android:textColor="#424242"
                        android:textSize="18sp"
                        android:drawableRight="@drawable/ic_down_arrow" />
                </LinearLayout>
                <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:ael_duration="400"
                    app:ael_expanded="false"
                    android:layout_below="@+id/lay3"
                    android:background="#fff"
                    android:id="@+id/paymentsLayout"
                    app:ael_interpolator="accelerate"
                    app:ael_orientation="vertical"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" >
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        android:layout_marginTop="5dp"
                        android:layout_below="@+id/paymentsLayout"
                        android:id="@+id/paymentsHistoryList">

                    </android.support.v7.widget.RecyclerView>
                </com.github.aakira.expandablelayout.ExpandableRelativeLayout>
            </RelativeLayout>

    </ScrollView>

    </android.support.v7.widget.CardView>

    </RelativeLayout>

    </ScrollView>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addMoreStudents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"
        android:onClick="addStudent"
        android:src="@drawable/plus"
        app:fabSize="normal"
        android:elevation="8dp"
        />

</RelativeLayout>




