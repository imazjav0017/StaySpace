<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#a5eaa5"
        android:id="@+id/groupChatLl"
        android:orientation="horizontal"
        android:visibility="invisible"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/groupContactNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Name"
                android:padding="5dp"
                android:textColor="#ff7310"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                />
            <TextView
                android:id="@+id/groupChatTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World"
                android:padding="5dp"
                android:layout_marginLeft="5dp"
                android:layout_alignParentLeft="true"
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:padding="5dp"
            android:id="@+id/groupTimeTv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="35dp"
            android:text="11:00" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#a5eaa5"
        android:id="@+id/otherChatLl"
        android:orientation="horizontal"
        android:visibility="visible"
        >
        <TextView
            android:id="@+id/otherChatTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World"
            android:padding="13dp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:padding="5dp"
            android:id="@+id/otherTimeTv"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:text="11:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffff"
        android:visibility="invisible"
        android:id="@+id/myChatLl"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/myChatTv"
            android:padding="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World"
             />
        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/ic_time"
            android:visibility="invisible"
            android:id="@+id/myChatStatusImage"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:padding="3dp"
            android:id="@+id/myChatTimeTv"
            android:layout_marginTop="13dp"
            android:text="11:00" />

    </LinearLayout>


</RelativeLayout>